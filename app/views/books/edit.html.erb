<p class="notice">
  <%= flash[:notice] %>
</p>

<%= form_with model: @book do |f| %>
  <h1>Editing Book</h1>

  <div>Title</div>
  <%= f.text_field :title %>

  <div>Body</div>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update book' %></p>

  <%= link_to "Show", book_path(@book.id)%>
  |
  <a href="/books">Back</a>

<% end %>